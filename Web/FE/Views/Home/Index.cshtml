@{
    ViewData["Title"] = "Report";
}
<h1>Report di Sostenibilità</h1>
<form id="filter" method="post" asp-action="List">
    <label>Dal <input type="date" name="from" /></label>
    <label>Al <input type="date" name="to" /></label>
    <label>Validità link (min) <input type="number" name="minutes" value="30" min="5" max="120" /></label>
    <button type="submit">Cerca</button>
</form>
<div id="results"></div>

@section Scripts{
    <script>const form = document.getElementById('filter');
  form.addEventListener('submit', async (e)=>{
    e.preventDefault();
    const res = await fetch(form.action, { method:'POST', body: new FormData(form) });
    document.getElementById('results').innerHTML = await res.text();
  });</script>
}